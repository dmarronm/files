<script type="text/javascript">

$(function(){

  new Highcharts.Chart({
  
  chart: { renderTo: "limitSpaceChart",
  type: "pie"
  
  },
  
  title: {text: "Storage capacity"},
    
  series: [{
    
    data: [["Available",<%= @categorium.availableSpace %>], ["Used",<%= @categorium.limitSpace - @categorium.availableSpace %>]]
    
  }]
  
  });
});

</script>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @categorium.name %>
</p>

<div id="limitSpaceChart" style ="width:560px; height:300px;">
</div>


<%= link_to 'Editar', edit_categorium_path(@categorium) %> |
<%= link_to 'Regresar', categoria_path %>

