<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password_hash %><br />
    <%= f.password_field :password_hash %>
  </div>
  <div class="field">
    <%= f.label :password_salt %><br />
    <%= f.password_field :password_salt %>
  </div>
  <%= f.hidden_field :limitSpace, :value => 5000 %>
  <%= f.hidden_field :availableSpace, :value => 5000 %>
  <%= f.hidden_field :usedBandwith, :value => 0 %>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
