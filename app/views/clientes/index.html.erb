<h1>Listing clientes</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Password hash</th>
    <th>Password salt</th>
    <th>Limitspace</th>
    <th>Availablespace</th>
    <th>Usedbandwith</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @clientes %>


<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.username %></td>
    <td><%= cliente.name %></td>
    <td><%= cliente.password_hash %></td>
    <td><%= cliente.password_salt %></td>
    <td><%= cliente.limitSpace %></td>
    <td><%= cliente.availableSpace %></td>
    <td><%= cliente.usedBandwith %></td>
    <td><%= link_to 'Show', cliente %></td>
    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Destroy', cliente, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>

</table>

