<h1>Archivos de la categor&iacute;a</h1>

<table border="1" width="800">
  <tr>
    <th>Path</th>
    <th>Size</th>
    <th>Fecha</th>
    <th></th>
  </tr>
<% @archivos.each do |archivo| %>
  <tr>
    <td><%= archivo.path %></td>
    <td align="right"><%= archivo.size %></td>
    <td><%= archivo.fecha.to_s(:on_date) %></td>
    <td><%= link_to 'Borrar', archivo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= params[:availableSpace] %>
<% if params[:availableSpace] != 0 %>
   <%= link_to 'Subir Archivo', subir_path(params[:idcategoria]) %>
<% end %>
<%= link_to 'Regresar', categoria_url %>

